<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/addressTitle_text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/address" />

    <TextView
        android:id="@+id/address_text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/addressTitle_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/priceTitle_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/address_text"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/price" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@+id/priceTitle_text"
        app:layout_constraintTop_toBottomOf="@+id/address_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/typeTitle_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_text"
        android:text="@string/type"/>

    <TextView
        android:id="@+id/type_text"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/typeTitle_text"
        app:layout_constraintTop_toBottomOf="@+id/price_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
       android:id="@+id/amenitiesTitle_text"
       android:text="@string/amentities"
       android:layout_width="wrap_content"
       android:layout_height="25dp"
       app:layout_constraintTop_toBottomOf="@id/typeTitle_text"
       app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/amenities_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/amenitiesTitle_text"
        app:layout_constraintTop_toBottomOf="@id/type_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ownerFormTitle_text"
        android:text="@string/ownerForm"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@+id/amenities_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ownerForm_text"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/ownerFormTitle_text"
        app:layout_constraintTop_toBottomOf="@id/amenities_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Delete me"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ownerForm_text"
        android:backgroundTint="#FFB8B1"/>

</androidx.constraintlayout.widget.ConstraintLayout>